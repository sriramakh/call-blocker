<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/primary"
                android:paddingHorizontal="20dp"
                android:paddingTop="48dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/textSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_subtitle"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    tools:text="3 numbers \u2022 1 prefix \u2022 2 contacts blocked" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tabManualBlock"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="6dp"
                        android:text="@string/tab_block_manual"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tabCallLogBlock"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:text="@string/tab_block_from_call_log"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tabRuleHistory"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="6dp"
                        android:text="@string/tab_blocked_rules_history"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tabCallBlockHistory"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:text="@string/tab_blocked_call_history"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Block Number Input -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlockNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block a Number"
                        android:textSize="13sp"
                        android:textColor="@color/section_header"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/editBlockedNumber"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:hint="@string/hint_phone_number"
                            android:inputType="phone"
                            android:background="@color/input_background"
                            android:paddingHorizontal="12dp"
                            android:textSize="15sp"
                            android:textColor="@color/primary"
                            android:textColorHint="@color/section_header"
                            android:maxLines="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonAddNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginStart="8dp"
                            android:text="@string/button_add_number"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/primary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Block Prefix Input -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlockPrefixInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block a Prefix"
                        android:textSize="13sp"
                        android:textColor="@color/section_header"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/editBlockedPrefix"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:hint="@string/hint_prefix"
                            android:inputType="phone"
                            android:background="@color/input_background"
                            android:paddingHorizontal="12dp"
                            android:textSize="15sp"
                            android:textColor="@color/primary"
                            android:textColorHint="@color/section_header"
                            android:maxLines="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonAddPrefix"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginStart="8dp"
                            android:text="@string/button_add_prefix"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/primary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Block Contact + Spam DB -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlockContactInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAddContact"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="@string/button_add_contact"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/primary" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="12dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/checkUseSpamDb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_spam_db"
                        android:textSize="14sp"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Calls (Device Call Log) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecentCalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_device_call_log"
                            android:textSize="13sp"
                            android:textColor="@color/section_header"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:letterSpacing="0.08" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonRefreshCallLog"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/action_refresh"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:minWidth="72dp"
                            android:paddingHorizontal="12dp"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="8dp"
                        android:text="Tap Block to add a number to your block list"
                        android:textSize="11sp"
                        android:textColor="@color/empty_hint" />

                    <TextView
                        android:id="@+id/emptyDeviceCallLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_device_call_log"
                        android:textSize="13sp"
                        android:textColor="@color/empty_hint"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDeviceCallLog"
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:nestedScrollingEnabled="true"
                        android:overScrollMode="ifContentScrolls"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Blocked Numbers List -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlockedNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_blocked_numbers"
                        android:textSize="13sp"
                        android:textColor="@color/section_header"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08"
                        android:paddingHorizontal="16dp" />

                    <TextView
                        android:id="@+id/emptyBlockedNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_blocked_numbers"
                        android:textSize="13sp"
                        android:textColor="@color/empty_hint"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerBlockedNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Blocked Prefixes List -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlockedPrefixes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_blocked_prefixes"
                        android:textSize="13sp"
                        android:textColor="@color/section_header"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08"
                        android:paddingHorizontal="16dp" />

                    <TextView
                        android:id="@+id/emptyBlockedPrefixes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_blocked_prefixes"
                        android:textSize="13sp"
                        android:textColor="@color/empty_hint"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerBlockedPrefixes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Blocked Contacts List -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlockedContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_blocked_contacts"
                        android:textSize="13sp"
                        android:textColor="@color/section_header"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08"
                        android:paddingHorizontal="16dp" />

                    <TextView
                        android:id="@+id/emptyBlockedContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_blocked_contacts"
                        android:textSize="13sp"
                        android:textColor="@color/empty_hint"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerBlockedContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Blocked Call History -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlockedCallHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_call_history"
                            android:textSize="13sp"
                            android:textColor="@color/section_header"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:letterSpacing="0.08" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonClearHistory"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/action_clear_history"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textColor="@color/surface"
                            android:minWidth="72dp"
                            android:paddingHorizontal="12dp"
                            app:backgroundTint="@color/accent"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/emptyCallHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_call_history"
                        android:textSize="13sp"
                        android:textColor="@color/empty_hint"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerCallHistory"
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:nestedScrollingEnabled="true"
                        android:overScrollMode="ifContentScrolls"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

